            <attr name="special" id="0">特殊符号的属性值</attr>
            <attr name="li_attr">
                <!--  可能需要抓取的链接形式不止一种-->
                <attr name="需要抓取的tag的标记id/class/***">属性值1</attr>
                <attr name="需要抓取的tag的标记id/class/***">属性值2</attr>
            </attr>
            <attr name="filename" save="需要保存的文件名">
                <attr name="art_title">
                    <attr name="需要抓取文章标题的属性标记">属性值</attr>
                </attr>
               <attr name="art_time">
