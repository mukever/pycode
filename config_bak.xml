    <web_name name="光明网">
        <!--  一个网站可以抓取多个列表 如 新闻/财经/社会等页面上的分类  -->
        <web_li name="列表1">
            <!--    自己构造下一页链接   -->
            <attr  name="start_pattrern">网址前缀</attr>
